package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;	/*		Class Map 		Cette classe permet de gérer la Room map. La Room map		permet de se connecter a toutes les autres Room principal , public 		du jeux	*/	public class Map extends MovieClip{		private var fenetre:Fenetre;				public function Map(fenetre :Fenetre) {			this.fenetre=fenetre;		}		//Methode qui permet l'affichage graphique de la classe		public function afficherThis(){			fenetre.addChild(this);			this.accueil.addEventListener(MouseEvent.CLICK,onClickAcceuil);		}				//Methode qui permet la supression l'affichage graphique de la classe		public function effacerThis(){			fenetre.removeChild(this);			this.removeEventListener(MouseEvent.CLICK,onClickAcceuil);			fenetre.map=null;		}				//Lors du clik sur le boutton accueil , on va envoyé au serveur 		//le changement de maap puis on va suprimer la map actuelle		public function onClickAcceuil(evt:MouseEvent){			fenetre.scene.connexion.sendText("CROOM=2");			this.effacerThis();		}	}	}