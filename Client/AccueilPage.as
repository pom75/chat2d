package {	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	/*Class AccueilPage		Fenetre d'acceuil du client		Elle permet pour l'instant seulement la connexion du client	*/	public class AccueilPage extends Sprite	{		private var connexion:ConnexionSocket;		private var pseudo:String = "";		private var mdp:String = "";		private var scene:MovieClip;		private var HostIp:String ;		private var HostPort:Number ;		public function AccueilPage(connexion:ConnexionSocket,scene :MovieClip,ip:String,port:Number)		{			this.connexion = connexion;			this.scene = scene;			this.HostIp=ip;			this.HostPort=port;			this.afficherThis();			this.barreM.displayAsPassword=true;						//Redimention de la fenetre			this.width = this.width* (stage.fullScreenWidth/1680);			this.height = this.height* ( stage.fullScreenHeight/1050 );					}		//Afficher la page d'accueil sur la scene		public function afficherThis(){			//Rajoute un ecouteur de click sur le bouton de connexion			this.conect.addEventListener(MouseEvent.CLICK, Co);			//Ajoute un ecouteur clavier sur la barre input mdp			this.barreM.addEventListener(KeyboardEvent.KEY_DOWN, Co1);			scene.addChild(this);		}				//Effacer la page d'accueil de la secene		public function effacerThis(){			scene.removeChild(this);			//Retir les ecouteur ajouter			this.conect.removeEventListener(MouseEvent.CLICK, Co);			this.barreM.removeEventListener(KeyboardEvent.KEY_DOWN, Co1);		}				//Affiche le string s dans la barre d'erreur		public function setError(s:String){			log_e.text = s;		}		//Controle les String entré et lance la co (lors du clik)		public function Co(e:MouseEvent):void		{			//Si les champs input ne sont pas vide			if (barreP.text != "" && barreM.text != "")			{				//On enregistre le pseudo et le mdp entre				pseudo = barreP.text;				mdp = barreM.text;				//On lance la connexion				this.lanceCo();				//On efface la page d'accueil				this.effacerThis();							}			else if (barreP.text == "")			{				setError("Pseudo manquant");			}			else			{				setError("Mot de passe manquant");			}		}				//Controle les String entré et lance la co (lors de l'appuis sur la touche entrer)		public function Co1(e:KeyboardEvent):void		{			if (barreP.text != "" && e.keyCode == 13 && barreM.text != "")			{				pseudo = barreP.text;				mdp = barreM.text;				this.lanceCo();				this.effacerThis();			}			else if (barreP.text == "" && e.keyCode == 13)			{				setError("Pseudo manquant");			}			else if ( e.keyCode == 13)			{				setError("Mot de passe manquant");			}		}				//Lance une connexionsocket , instanci la class		public function lanceCo():void		{			scene.connexion = new ConnexionSocket(scene,HostIp,HostPort,pseudo,mdp);					}	}}//Ecoute la touche entré